<% if notice %>
<div class="alert alert-success" role="alert">
  <%= notice %>
</div>
<% end %>


<%= render @friend %>

<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend),class:"btn btn-secondary " %> 
  <%= link_to "Back to friends", friends_path,class:"btn btn-primary" %>

  <%= button_to "Destroy this friend", @friend, method: :delete,class:"btn btn-danger mt-3" %>
</div>
